<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:src="@drawable/ic_albums"
        android:id="@+id/playlist_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/playlist_cover"
        android:text="Playlist name"/>

    <TextView
        android:id="@+id/playlist_songCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="n songs"
        android:layout_below="@+id/playlist_name"
        android:layout_toEndOf="@+id/playlist_cover" />
</RelativeLayout>
